<!DOCTYPE html>
<html lang="it">
<head>
  <%- include('../partials/head.ejs') %>
  <style>
    body{
      padding: 0px;
    }
  </style>
   <title>Moovy</title>
</head>
<body>

    <%- include('../partials/navbarClie.ejs') %>
   
    <div class="container mx-auto">
        <br>
         <div class="row">
             <div class="card card-body" style="width: 516px;">
                 <br>                
                 <h1>Inserisci nuovo metodo di pagamento!</h1>
                 <br>
             <form action="/Riepilogo/Pagamento/NuovoMetodo" method="POST">
                 <br>
                 <div class="row">
                    <div class="col-md-6 mb-4 ">
    
                      <div class="form-outline">
                        <label class="form-label" for="numero carta">Numero di carta</label>
                        <input type="text" id="numero_carta" class="form-control form-control-md" placeholder="Numero carta" />
                      </div>
    
                    </div>
                    <div class="col-md-6 mb-4 ">
    
                      <div class="form-outline">
                        <label class="form-label" for="numero carta">Intestatario carta</label>
                        <input type="text" id="nome" class="form-control form-control-md" placeholder="Nome e cognome intestatario" />
                      </div>
    
                    </div>
                  </div>
    
                    <div class="row">
                      <div class="col-md-6 mb-4 ">
      
                        <div class="form-outline">
                          <label class="form-label" for="scadenza carta">Data scadenza</label>
                          <input type="text" id="scadenza_carta" class="form-control form-control-md" placeholder="Data scadenza carta" />
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4 ">
      
                        <div class="form-outline">
                          <label class="form-label" for="cvv">CVV</label>
                          <input type="text" id="cvv" class="form-control form-control-md" placeholder="CVV" />
                        </div>    
                      </div>                 
                  </div> 
               </form>

             </div> 
                       
           </div>
           <br>
          
            <!--giusto per mettere qualcosa che fa comparire notifica dopo evento--> 
            <div class="d-flex justify-content-center">
            <button class="btn btn-lg btn-success align-content-lg-center  " onclick="myFunction()">Salva metodo</button>
            <h2 id="scelta"></h2>
        </div>
        <br>

     </div>
<!--script per alert--> 
<script>
function myFunction() {
  var txt;
  if (confirm("Vuoi salvare il metodo di pagamento")) {
    txt = "Salvato!";
  } else {
    txt = "Ok!";
  }
  document.getElementById("scelta").innerHTML = txt;
}
</script>
     
<%- include('../partials/footer.ejs') %>
</body>
</html>