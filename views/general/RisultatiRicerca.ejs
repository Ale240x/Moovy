                    <tbody>

                <% veicoli.forEach( (veicolo) => { %>
                        
                        <tr>
                            <td><a href="#"><%= veicolo.nome_veicolo %></a></td>
                    <% if(veicolo.tipo_veicolo == 'Automobile') { %>
                        <td><a href="#"><%= veicolo.modello_auto %></a></td>
                    
                    <% } else if(veicolo.tipo_veicolo == 'Moto') { %>
                        <td><a href="#"><%= veicolo.modello_moto %></a></td>
                    <% } %>
                        <td><a href="#"><%= veicolo.tariffa %></a></td>
                        </tr>
                    
                    <% idPrenotazione = prenotazione.prenotazioneId; %>                         
                <% }); %>
                    </tbody>
                </table>                                    
        <% } %>
        
