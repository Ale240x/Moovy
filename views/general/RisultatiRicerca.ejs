<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel='stylesheet' type='text/css' media='screen' href='RicercaVeicolo.css'>

    <title>Veicoli</title>
</head>
<body>
    <%- include('../partials/navbar.ejs') %>

    <!--tabella veicoli-->
    <div class="container-fluid p-3" > <!--style="background-color: rgb(125, 187, 153);"-->
            <%
                if(!veicoli || veicoli.length==0) {

                    __append('<div class="section col-12 text-center" >Nessun veicolo corrisponde ai filtri selezionati</div>')
                } 
                else{

                    let idPrenotazione = ""; 
                    
                    __append('<table class="table table-hover">')
                        __append('<tbody>')

                    veicoli.forEach( (veicolo) => {   
                           
                            __append('<tr>')
                            __append('<td><a href="#"><%= veicolo.nome_veicolo %></a></td>')
                        if(veicolo.tipo_veicolo == 'Automobile'){
                            __append('<td><a href="#"><%= veicolo.modello_auto %></a></td>')
                        }
                        else if(veicolo.tipo_veicolo == 'Moto'){
                            __append('<td><a href="#"><%= veicolo.modello_moto %></a></td>')
                        }
                            __append('<td><a href="#"><%= veicolo.tariffa %></a></td>')
                            __append('</tr>')
                        __append('</table>')
                        idPrenotazione = prenotazione.prenotazioneId;                            
                    });
                        __append('</tbody>')
                    __append('</table>')                                     
                %>
        <ul class="row" style="list-style-type: none;">
            <li class="col-md pb-4 text-center">
                <img src="public/images/C3.jpg" alt="c3" class="img-thumbnail border-success" height="156px">
            </li>                                               
            <li class="col-md pb-4 text-center">
                <img src="public/images/Moto.jpg" class="img-thumbnail border-success" height="156px">
            </li>
            <li class="col-md pb-4 text-center">
                <img src="public/images/Bici.jpg" class="img-thumbnail border-success" height="156px">
            </li>
            <li class="col-md pb-4 text-center">
                <img src="public/images/Monopattino.jpg" class="img-thumbnail border-success" height="156px">
            </li>
            <li class="col-md pb-4 text-center">
                <img src="public/images/Monopattino.jpg" class="img-thumbnail border-success" height="156px">
            </li>
        </ul>
    </div>
    <br><br><br>
    <%- include('../partials/footer.ejs') %>

</body>
</html>